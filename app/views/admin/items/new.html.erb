<h4>Add New Item</h4>

<%= form_for @item, url: admin_items_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :money %>
  <%= f.number_field :money %>
  <%= f.label :dexterity %>
  <%= f.number_field :dexterity %>
  <%= f.label :intelligence %>
  <%= f.number_field :intelligence %>
  <%= f.label :strength %>
  <%= f.number_field :strength %>
  <%= f.label :health %>
  <%= f.number_field :health %>
  <%= f.label :speed %>
  <%= f.number_field :speed %>
  <%= hidden_field_tag(:store_id, @item.itemable_id) %>
  <%= hidden_field_tag(:category_id, @item.new_category) %>
  <%= f.submit "Create Item", class: "btn" %>
 <% end %>
