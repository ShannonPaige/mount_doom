<div class="container">
  <h4>Edit Items In <%= @store.name %></h4>
  <div class="row">
    <div class="col m6">
      <%= link_to "Add New Item", new_admin_item_path(store_id: @store.id), method: :get %>
    </div>
    <div class="col m6">
      <ul>
        <% @store.items.each do |item| %>
          <li id="item-<%= item.id %>">
            <span class="title"><%= item.name  %></span>
            <p>Price: <span class="price" ><%= item.price %></span> <br>
               <% item.skill_set.attributes.each do |attribute, value| %>
               <%= attribute %>: <%= value %>
               <% end %>
            </p>
            <%= button_to "Edit", edit_admin_item_path(item), method: :get %>
            <%= link_to "Delete", admin_item_path(item, store_id: @store.id), method: :delete %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
