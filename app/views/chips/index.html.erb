<h2>Chips</h2>

<div class="chips">
  <div class="row">
    <% @chips.each do |chip| %>
      <div class="col m4">
        <div class="card medium">
          <div class="card-image">
            <img id="chip-picture" src="<%= chip.image_file_name %>" >
          </div>
          <div class="card-content" id= <%= "#{chip.slug}"%>>
            <b><%= chip.name %></b>
              <p>$<%= chip.price %></p>
              <p><%= button_to "Add to Cart", cart_chips_path(chip_id: chip.id) %></p>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
