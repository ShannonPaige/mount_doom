<h2>Chips</h2>

<div class="chips">
  <div class="row">
    <% @chips.each do |chip| %>
      <div class="col m3">
        <div class="card">
          <div class="card-image">
            <img src="images/sample-1.jpg">
          </div>
          <div class="card-content" id= <%= "#{chip.slug}"%>>
            <h5><%= chip.name %></h5>
              <p><%= chip.description %></p>
              <p>$<%= chip.price %></p>
              <p><%= button_to "Add to Cart", cart_chips_path(chip_id: chip.id) %></p>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
