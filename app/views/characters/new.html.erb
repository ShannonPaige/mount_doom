<h1>Choose a Character</h1>

<div class="row">
  <div class="col s1 m2 l2">
    <br>
  </div>

   <div class="col s10 m8 l8">
     <div id="introduction" class="section scrollspy">
       <p>Click once on the right, then, cause we suck, click again on the picture.</p>
     </div>

     <% @avatars.each do |avatar| %>
       <div class="card avatar profile-<%= avatar.id %> hide large">
        <div class="card-image waves-effect waves-block waves-light">
          <img src="<%= image_url(avatar.image_url)%>">
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%=avatar.name%></span>
          <ul>
            <% avatar.skills.each do |skill, value| %>
            <%= skill.capitalize %>: <%= value %>
            <% end %>
          </ul>
        </div>
        <div class="card-action <%=avatar.name%>">
          <%= link_to("Begin Journey!", new_game_path(avatar: avatar.id ), method: :post) %>
        </div>
      </div>
    <% end  %>

   </div>
   <div class="col hide-on-small-only m2 l2">
     <ul class="section avatar-selection">
        <% @avatars.each do |avatar| %>
        <li><a class="side-<%= avatar.id %>"> <%= avatar.name %></a></li>
        <% end %>
     </ul>
   </div>
 </div>
