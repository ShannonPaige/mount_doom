<div class="container">
  <h4 class="dashboard-cursive"><%= current_avatar.name %></h4>
    <div class="row">

      <div style="padding:0px" class="card avatar-show col s4 profile-<%= current_avatar.id %> large">
          <div class="card-image">
            <img src="<%= image_url(current_avatar.image_url)%>">
          </div>

          <div class="row">
            <ul style="padding-left:25px" class="col s6">
              <span class="card-title activator grey-text">Current Attributes</span>
              <% current_avatar.skills.each do |skill| %>
                <% if skill[0] != "health" && skill[0] != "money" %>
                <li><%= skill[0].capitalize %>: <%= skill[1] %></li>
                <% end %>
              <% end %>
            </ul>

            <ul class="col s6">
              <span class="card-title activator grey-text">Summary</span>
              <li>Bank: <%= current_avatar.skill_set.money %></li>
              <li>Health: <%= current_avatar.skill_set.health %></li>
              <li>Location: <%= "Bree" %></li>
            </ul>
          </div>


      </div>

      <div class="col s1">
        <br>
      </div>

      <div  class="card avatar-show col s6 profile-<%= current_avatar.id %> large">
          <div >
            <span class="card-title activator grey-text">Base Attributes</span>
              <div class="">
                <ul>
                <% current_avatar.skills.each do |skill| %>
                  <% if skill[0] != "health" && skill[0] != "money" %>
                    <li><%= skill[0].capitalize %>: <%= skill[1] %></li>
                  <% end %>
                <% end %>
                </ul>
              </div>
            <span class="card-title activator grey-text ">Inventory</span>
            <ul>
              <% ["Knife", "Leather Armor", "Bread", "The Ring of Power"].each do |item| %>
                <li><%= item %><%= " ||" %> Strength: +2, Dexterity: +1, Intelligence: -1</li>
              <% end %>
            </ul>
            <span class="card-title activator grey-text">Injuries</span>
            <ul>
              <% current_avatar.skills.each do |skill| %>
                <% if skill[0] != "health" && skill[0] != "money" %>
                  <li><%= skill[0].capitalize %>: <%= skill[1] %></li>
                <% end %>
              <% end %>
            </ul>
          </div>
      </div>
  </div>
</div>
